{
  "name": "sbomify",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/sbomify/sbomify.com",
  "author": "Devan Thakur <devanthakur89@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:css": "postcss _assets/css/tailwind.css -o assets/css/styles.css",
    "build:d2": "bun scripts/watch-d2.ts",
    "watch:css": "postcss _assets/css/tailwind.css -o assets/css/styles.css --watch",
    "watch:d2": "bun scripts/watch-d2.ts --watch",
    "lint": "bun run lint:markdown && bun run lint:scss && bun run lint:d2",
    "lint:d2": "d2 fmt _d2/*.d2",
    "lint:markdown": "dprint check \"**/*.md\"",
    "lint:markdown:fix": "dprint fmt \"**/*.md\"",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:scss:fix": "stylelint \"**/*.scss\" --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "autoprefixer": "^10.4.22",
    "browserslist": "^4.28.0",
    "caniuse-lite": "^1.0.30001757",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.18",
    "update-browserslist-db": "^1.1.4"
  },
  "devDependencies": {
    "dprint": "^0.50.2",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0"
  }
}
