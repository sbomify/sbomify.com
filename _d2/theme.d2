# Sbomify D2 Theme

# Global Defaults
style: {
  fill: "transparent"
  stroke: "transparent"
  stroke-width: 0
  font-size: 16
  border-radius: 16
}

# Reusable Classes
classes: {
  # Primary: Dark Blue Background (matches site), Purple Stroke
  primary: {
    style: {
      fill: "#201B4C"
      stroke: "#8A7DFF"
      font-color: "#d874a9"
      stroke-width: 2
      shadow: false
      bold: true
      border-radius: 16
    }
  }

  # Accent: Dark Blue Background, Pink Stroke
  accent: {
    style: {
      fill: "#201B4C"
      stroke: "#d874a9"
      font-color: "#d874a9"
      stroke-width: 2
      shadow: false
      bold: true
      border-radius: 16
    }
  }

  # Secondary: Dark Background, Light Pink Stroke
  secondary: {
    style: {
      fill: "#201B4C"
      stroke: "#FCDDEC"
      font-color: "#d874a9"
      stroke-width: 2
      shadow: false
      bold: true
      border-radius: 16
    }
  }

  # Group Container Style
  # Use this class for grouping boxes like "Authoring"
  group: {
    style: {
      stroke: "#8A7DFF"
      stroke-dash: 3
      fill: "#F5F5FA"
      font-color: "#141035"
      border-radius: 16
      stroke-width: 2
    }
  }

  # Visual style for stacks
  stack: {
    style: {
      multiple: true
    }
  }

  # Animated Purple Connection
  flow: {
    style: {
      animated: true
      stroke: "#8A7DFF"
      font-color: "#8A7DFF"
      stroke-width: 2
    }
  }

  # Animated Pink Connection
  flow-pink: {
    style: {
      animated: true
      stroke: "#d874a9"
      font-color: "#d874a9"
      stroke-width: 2
    }
  }
}
