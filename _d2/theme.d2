# Sbomify D2 Theme - Clean & Modern
#
# Brand colors:
# - Dark Blue: #201B4C
# - Purple: #8A7DFF  
# - Pink: #d874a9
# - Light Pink: #FCDDEC
# - Background: #F8F9FC

# Global Defaults
style: {
  fill: "transparent"
  stroke: "transparent"
  stroke-width: 0
  font-size: 14
  border-radius: 8
}

classes: {
  # Primary - Purple border, light fill
  primary: {
    style: {
      fill: "#FFFFFF"
      stroke: "#8A7DFF"
      font-color: "#201B4C"
      stroke-width: 2
      shadow: false
      border-radius: 8
      font-size: 14
    }
  }

  # Accent - Pink border, light fill
  accent: {
    style: {
      fill: "#FFFFFF"
      stroke: "#d874a9"
      font-color: "#201B4C"
      stroke-width: 2
      shadow: false
      border-radius: 8
      font-size: 14
    }
  }

  # Secondary - Light pink border, light fill (for less emphasis)
  secondary: {
    style: {
      fill: "#FFFFFF"
      stroke: "#CCCCCC"
      font-color: "#666666"
      stroke-width: 2
      shadow: false
      border-radius: 8
      font-size: 14
      stroke-dash: 3
    }
  }

  # Highlight - Filled purple (for key items)
  highlight: {
    style: {
      fill: "#8A7DFF"
      stroke: "#8A7DFF"
      font-color: "#FFFFFF"
      stroke-width: 2
      shadow: false
      border-radius: 8
      font-size: 14
      bold: true
    }
  }

  # Group Container
  group: {
    style: {
      fill: "#F8F9FC"
      stroke: "#E2E4E9"
      font-color: "#201B4C"
      stroke-width: 1
      border-radius: 12
      font-size: 13
    }
  }

  # Stack style
  stack: {
    style: {
      multiple: true
    }
  }

  # Flow - Purple animated connection
  flow: {
    style: {
      animated: true
      stroke: "#8A7DFF"
      font-color: "#666666"
      stroke-width: 2
      font-size: 12
    }
  }

  # Flow Pink - Pink animated connection
  flow-pink: {
    style: {
      animated: true
      stroke: "#d874a9"
      font-color: "#666666"
      stroke-width: 2
      font-size: 12
    }
  }
}
